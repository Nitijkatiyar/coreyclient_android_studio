<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

      <Button
        android:id="@+id/buttonStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:text="Button" />
    
    <LinearLayout
        style="@style/TransparentButton"
        android:layout_below="@+id/buttonStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/li_padding_bottom"
        android:paddingLeft="@dimen/li_padding_left"
        android:paddingRight="@dimen/li_padding_right"
        android:paddingTop="@dimen/li_padding_top" >

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/li_text_color_main"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/line2edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/li_intra_gap"
            android:clickable="false"
            android:cursorVisible="false"
            android:background="#00000000"
            android:ellipsize="end"
            android:focusableInTouchMode="false"
            android:maxLines="1"
            android:textColor="@color/li_text_color_subscript"
            android:textSize="@dimen/secondary_text_size" />

        <View
            android:id="@+id/dividerL"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:padding="1dp" />
    </LinearLayout>

  

</RelativeLayout>