<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/child_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/child_mainText"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:contentDescription="@string/about_text_1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingTop="0dp" />

    <ImageView
        android:id="@+id/switch_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/about_text_1"
        android:gravity="center"
        android:layout_alignBottom="@+id/child_image"
        android:layout_alignRight="@+id/child_image"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/child_mainText"
        style="@android:style/TextAppearance.DeviceDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/child_subscript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/child_image"
        android:background="@android:color/white"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/black" />


    <View
        android:id="@+id/dividerL"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:padding="1dp"
        android:visibility="gone" />


</RelativeLayout>