<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <include layout="@layout/layoutheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView android:id="@+id/auth_app_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="@dimen/normal_text_size"
    />

    <EditText android:id="@+id/auth_inputfield1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_gap"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="@dimen/normal_text_size"
        android:imeOptions="actionNext"
        android:lines="1"
        android:inputType="text|textNoSuggestions"
    />

    <EditText android:id="@+id/auth_inputfield2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_gap"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="@dimen/normal_text_size"
        android:inputType="textPassword"
        android:lines="1"
        android:imeOptions="actionNext"
    />

    <EditText android:id="@+id/auth_inputfield3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/text_gap"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="@dimen/normal_text_size"
        android:imeOptions="actionDone"
        android:lines="1"
        android:inputType="text|textNoSuggestions"
    />

    <Button android:id="@+id/auth_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_gap"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="@dimen/btn_text_size"
        android:text="Submit"
    />

    <TextView android:id="@+id/auth_help_hint"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/group_gap"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textSize="@dimen/secondary_text_size"
        android:text="@string/outlook_auth_help"
    />
     <Button
        android:id="@+id/skip_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/skip"
        android:textSize="@dimen/btn_text_size"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
    />
</LinearLayout>
